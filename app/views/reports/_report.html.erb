<%# views/reports/_report.html.erb %>

<% obj.reports.each do |report| %>
<div class="row">
    <div class="class-xs-8 class-xs-offset-2">
        <div class="well well-lg">
            <div class="report-title">
                <%= link_to report.filename , [report.property, report] , method: :get %>
            </div>
            <% if logged_in? && ((current_user == @property.user) || current_user.admin?) %>
            <div class="report-actions">
                <%= link_to "Update this report", [report.property, report], class: "btn btn-xs btn-primary" %> 
                <%= link_to "Delete this report", [report.property, report], method: :delete, 
                                                                    data: {confirm: "Are you sure you want to delete this?"}, 
                                                                    class: "btn btn-xs btn-danger"  %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<% end %>