<h2>New property</h2>

<%= form_for @property do |f| %>
    <p>
        <%= f.label :property_name %>
        <%= f.text_field :property_name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :value %>
        <%= f.number_field :value %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>